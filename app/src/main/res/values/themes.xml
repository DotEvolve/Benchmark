<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Benchmark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Benchmark" parent="Base.Theme.Benchmark" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InfoTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- REMOVED: android:layout_alignParentTop and android:layout_centerHorizontal -->
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">42dp</item> <!-- Kept margin for spacing -->
        <!-- REMOVED: android:layout_centerHorizontal and android:layout_below -->
    </style>

    <style name="ResultTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">42dp</item> <!-- Kept margin for spacing -->
        <!-- REMOVED: android:layout_alignParentStart and android:layout_below -->
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin
        </item> <!-- Assumes this dimen exists -->
        <item name="android:paddingRight">@dimen/activity_horizontal_margin
        </item> <!-- Assumes this dimen exists -->
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="ScoreTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item> <!-- Kept margin for spacing -->
        <!-- REMOVED: android:layout_below and android:layout_centerHorizontal -->
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">100sp</item>
    </style>

    <style name="AdsTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>